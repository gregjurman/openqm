$internal
program spopen
$catalog $spopen

$include keys.h

   flags = getpu(pu$spoolflags, 0)
   begin case
      case @option = 0
         flags = bitand(flags, bitnot(PU$FLG.KEEP.OPEN))
         setpu pu$spoolflags, 0, flags
      case @option = 1
         flags = bitor(flags, PU$FLG.KEEP.OPEN)
         setpu pu$spoolflags, 0, flags
         printer close on 0
      case 1
         stop "Internal error: Invalid dispatch information"
   end case

   @system.return.code = 0
end

* END-CODE
