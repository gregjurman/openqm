$internal
$no.symbols
$no.xref
$recursive
subroutine subst((str), old.list, new.list, delimiter)

   result = ''
   if str # '' then
      loop
         s = remove(str, delim)
         i = listindex(old.list, delimiter, s)
         if i then result := field(new.list, delimiter, i)
         else result := s
      while delim
         result := char(256-delim)
      repeat
   end else
      i = listindex(old.list, delimiter, '')
      if i then result = field(new.list, delimiter, i)
   end

   return value result
end

* END-CODE
