function pathtkn((path))
$catalogue !pathtkn

   u.path = upcase(path)
   begin case
      case u.path[1,1] # '@'   ;* Performance improvement if not special token
         null
      case u.path[1,6] = '@QMSYS'
         path = @qmsys:path[7,9999]
      case u.path[1,4] = '@TMP'
         path = config('TEMPDIR'):path[5,9999]
      case u.path[1,5] = '@HOME'
         path = env('HOME'):path[6,9999]
      case u.path[1,7] = '@DRIVE:' and system(91)
         path = @qmsys[1,2]:path[8,9999]
   end case

   return path
end

* END-CODE
