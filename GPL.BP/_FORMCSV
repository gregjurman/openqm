* START-CODE

$internal
$no.symbols
$no.xref
$recursive
subroutine formcsv((s))

   n = dcount(s, @fm)
   for i = 1 to n
      ss = s<i>
      if index(ss, '"', 1) or index(ss, ',', 1) then
        s<i> = '"' : change(ss, '"', '""') : '"'
      end
   next i

   return value change(s, @fm, ',')
end

* END-CODE
